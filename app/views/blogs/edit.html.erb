<%= javascript_include_tag "kindeditor/kindeditor" %>
<%= javascript_include_tag "kindeditor/zh_CN" %>
<% provide(:title, '编辑') %>
<h1>编辑</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@blog) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :tag %>
      <%= f.text_field :tag %>

      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.submit "提交", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<script>
$(function() {
  var editor = KindEditor.create('textarea[id="blog_content"]');
});
</script>