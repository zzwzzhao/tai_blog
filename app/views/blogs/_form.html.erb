<div class="row">
  <div class="span6 offset3">
    <%= form_for(@blog) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :tag %>
      <%= f.text_field :tag %>

      <%= f.label :content %>
      <%= f.kindeditor :content, width: 800, height: 300 %>

      <%= f.submit "提交", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>