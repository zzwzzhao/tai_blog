<% provide(:title, "登录") %>
<div class="session_form">
  <h1 class="text-left">登录</h1>
  <%= simple_form_for(:session, url: sessions_path, html:{ class: "form-horizontal" }) do |f| %>
    <%= f.error_notification %>
    <%= f.input :email %>
    <%= f.input :password %>
    <div class="control-group">
      <div class="controls">
        <%= f.button :submit, value: '登录', class: 'btn btn-large btn-primary' %>
        <%= link_to "现在注册", signup_path, class: 'btn btn-large btn-primary' %></p>
      </div>
    </div>
  <% end %>
</div>