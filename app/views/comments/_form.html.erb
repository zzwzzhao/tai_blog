<% provide(:title, '评论') %>
<h1>评论</h1>

<div class="row">
  <div class="span12 offset3">
    <%= form_for [@blog, @comment] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :content %>
      <%= f.kindeditor :content, width: 800, height: 300 %>

      <%= f.submit "提交", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>